<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandTextView">
        <attr name="icon_width" format="dimension" />
        <attr name="icon_height" format="dimension" />
        <attr name="icon_background" format="reference" />
        <attr name="space_number" format="integer" />
        <attr name="max_rows" format="integer" />
    </declare-styleable>

    <declare-styleable name="ExpandView">
        <attr name="iconDrawable" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="expandBackground" format="reference" />
        <attr name="isNeedEllipsis" format="boolean" />
        <attr name="isNeedShowIcon" format="boolean" />
        <attr name="maxRows" format="integer" />
        <attr name="textInnerPadding" format="dimension" />
        <attr name="isNeedSpace" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GoodLikeTextView">
        <attr name="likeIconDrawable" format="reference" />
        <attr name="nameTextColor" format="color" />
        <attr name="nameTextNightColor" format="color" />
        <attr name="nameTextSize" format="dimension" />
        <attr name="contentTextColor" format="color" />
        <attr name="contentTextNightColor" format="color" />
        <attr name="contentTextSize" format="dimension" />
        <attr name="iconAndTextPadding" format="dimension" />
        <attr name="maxLines" format="integer" />
        <attr name="isNeedLikeEllipsis" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LikeTextView">
        <attr name="nameTextColor1" format="color" />
        <attr name="nameTextNightColor1" format="color" />
        <attr name="contentTextColor1" format="color" />
        <attr name="contentTextNightColor1" format="color" />
    </declare-styleable>
</resources>